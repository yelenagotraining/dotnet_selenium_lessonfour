@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Home Page";
}

@{
    if (Context.Request.Cookies["acceptedCookies"] == null)
    {
        <div>
            <p id="CookiesBeingUsed">This site uses cookies, etc.</p>
        </div>
    }
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="10000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    New low rate
                    <a name="ApplyLowRate" class="btn btn-default" asp-area="" asp-controller="Apply" asp-action="Index">Apply Now!</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Easy application process
                    <a class="btn btn-default" asp-area="" asp-controller="Apply" asp-action="Index">Easy: Apply Now!</a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.svg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Award winning customer service
                    <a class="btn btn-default customer-service-apply-now" asp-area="" asp-controller="Apply" asp-action="Index">Apply Now!</a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div>
    <table>
        <caption>Product Rates</caption>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Rate</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Easy Credit Card</td>
                <td>20% APR</td>
            </tr>
            <tr>
                <td>Silver Credit Card</td>
                <td>18% APR</td>
            </tr>
            <tr>
                <td>Gold Credit Card</td>
                <td>17% APR</td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <div>
        <p>Quick links: <a asp-area="" asp-controller="Apply" asp-action="Index">@ViewData["RandomGreeting"] - Apply Now!</a></p>
    </div>
</div>
<div>
    <a id="LiveChat" href="#" onclick="setTimeout(function() { alert('Live chat is currently closed.'); }, 2000)">Start Live Chat</a>
</div>
<div>
    <a id="LearnAboutUs" href="#" onclick="if (window.confirm('Do you want to learn more about us?')) { window.open('/Home/About','_self') }">Learn more about us</a>
</div>

<hr />
<footer>
    <p>&copy; 2020 - CreditCards</p>
    <p>Time Generated: @DateTime.Now.ToLongTimeString()</p>
    <p id="GenerationToken">@Guid.NewGuid()</p>
    <a id="ContactFooter" target="_blank" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
</footer>
